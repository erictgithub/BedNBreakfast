<h1 class="signuptitle"> Sign Up </h1>

<form class="signupform" method="POST" action="/message">

    <div class="email">
        <input type="email" name="email" placeholder="Email">
    </div>

    <div class="firstName">
        <input type="text" name="firstName" placeholder="First Name">
